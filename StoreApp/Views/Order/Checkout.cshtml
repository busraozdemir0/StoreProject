@model Order

<div class="text-danger" asp-validation-summary="All"></div> <!-- Hata mesajlarının görüneceği kısım -->

<form method="post" asp-action="Checkout">
    <div class="form-group my-3">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
        <div class="form-group my-3">
        <label asp-for="City">City</label>
        <input class="form-control" asp-for="City" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line1">Addres</label>
        <input class="form-control" asp-for="Line1" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line2">Street Number</label>
        <input class="form-control" asp-for="Line2" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line3">House Number</label>
        <input class="form-control" asp-for="Line3" />
    </div>
    <div class="form-group my-3">
        <input asp-for="GiftWrap" />
         <label>Gift wrap these items.</label>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Complete Order</button>
    </div>
</form>